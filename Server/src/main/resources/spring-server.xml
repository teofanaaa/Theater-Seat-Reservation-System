<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="userRepo" class="persistence.repository.UserRepository">
    </bean>

    <bean id="spectacolRepo" class="persistence.repository.SpectacolRepository">
    </bean>


    <bean id="myService" class="service.MyService">
        <constructor-arg ref="userRepo"/>
        <constructor-arg ref="spectacolRepo"/>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">

        <property name="serviceName" value="Concurs"/>
        <property name="service" ref="myService"/>
        <!--<property name="serviceInterface" value="services.IServer"/>-->
        <property name="servicePort" value="1099"/>
    </bean>


</beans>